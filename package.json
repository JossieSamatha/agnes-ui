{
  "name": "agnes-ui",
  "version": "0.1.0",
  "private": true,
  "main": "src/main.js",
  "files": [
    "src",
    "src/style"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint -f json -o report.json",
    "deploy": "yarn publish --registry=http://repo.hexinfo.cn:8000/artifactory/api/npm/npm-goframe/ ",
    "test:unit": "vue-cli-service test:unit",
    "unit": "run-s lint test:unit",
    "api": "swagger-api http://localhost:9002/v2/api-docs"
  },
  "dependencies": {
    "@hex/ares-ui": "^5.0.1",
    "@hex/gf-ui": "^5.0.3",
    "core-js": "^3.6.4",
    "echarts": "^4.8.0",
    "element-ui": "^2.13.0",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.15",
    "vue": "^2.6.11",
    "vue-grid-layout": "^2.3.7",
    "vuedraggable": "^2.23.2",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@hex/swagger-api": "1.0.6",
    "@vue/cli-plugin-babel": "^4.2.0",
    "@vue/cli-plugin-eslint": "^4.2.0",
    "@vue/cli-plugin-unit-jest": "^4.2.3",
    "@vue/cli-service": "^4.2.0",
    "@vue/test-utils": "^1.0.0-beta.32",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "jest": "^25.1.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-sonar-reporter": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "vue-jest": "^3.0.5",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-debugger": "error",
      "no-console": "error"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "preset": "@vue/cli-plugin-unit-jest",
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**"
    ]
  }
}
